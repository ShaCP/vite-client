{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm:start",
            "type": "shell",
            "command": "BROWSER=none npm start",
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Optimizing...",
                    "endsPattern": "ready in"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Terminate All Tasks",
            "command": "echo ${input:terminate}",
            "type": "process",
            "problemMatcher": []
        },
        {
            "label": "Kill Terminal",
            "command": "${command:workbench.action.terminal.killAll}",
            "type": "process",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Terminate All Tasks"
            ]
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll",
        }
    ]
}